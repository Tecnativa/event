<data>

    <record id="view_event_type_form" model="ir.ui.view">
        <field name="name">Link to events from type</field>
        <field name="model">event.type</field>
        <field name="groups_id" eval="[(4, ref('sales_team.group_sale_salesman'))]" />
        <field name="inherit_id" ref="event.view_event_type_form"></field>
        <field name="arch" type="xml">
            <div position="before">
                <!-- HACK Add .oe_inline to button box to avoid broken UI with
                    other modules that also need to add the button box, such as
                    event_sale_reservation -->
                <div class="oe_button_box oe_inline" name="button_box">
                    <!-- Use same iconography as in contact form -->
                    <button colspan="2" class="oe_stat_button" type="action" name="%(event.action_event_view)d" icon="fa-ticket" context="{'default_event_type_id': active_id, 'search_default_event_type_id': active_id}">
                        <field name="seats_available_total" widget="statinfo"/>
                    </button>
                    <button class="oe_stat_button" type="action" name="%(crm.crm_lead_opportunities_tree_view)d" icon="fa-star" context="{'default_event_type_id': active_id, 'search_default_event_type_id': active_id}">
                        <field name="seats_wanted_total" widget="statinfo" />
                    </button>
                </div>
            </div>
        </field>
    </record>

</data>
